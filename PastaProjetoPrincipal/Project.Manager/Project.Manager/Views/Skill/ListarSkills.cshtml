@model IEnumerable<Project.Manager.Models.Skill>

@{
    ViewBag.Title = "ListarSkills";
}

<h2>Listar Skills</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table class="table table-bordered table-hover" style="background-color:white;">
    <tr>
        <th class="col-lg-3">
            @Html.DisplayNameFor(model => model.TipoSkill)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoSkill)
            </td>

            <td>
                @Html.ActionLink(" ", "AlterarSkills", new { id = item.Id }, new { @class = "btn btn-info glyphicon glyphicon-pencil", title = "Alterar" })
                @Html.ActionLink(" ", "MostrarDetalhes", new { id = item.Id }, new { @class = "btn btn-success glyphicon glyphicon-zoom-in", title = "Mostrar Detalhes" })
                @Html.ActionLink(" ", "ExcluirSkills", new { id = item.Id }, new { @class = "btn btn-danger glyphicon glyphicon-remove-circle", title = "Excluir" })
            </td>
        </tr>
    }

</table>
