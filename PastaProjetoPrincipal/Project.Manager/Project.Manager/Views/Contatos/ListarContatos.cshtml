@model IEnumerable<Project.Manager.Models.Contato>

@{
    ViewBag.Title = "ListarContatos";
}

<h2>Listar Contatos</h2>


<table class="table table-bordered table-hover" style="background-color:white;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TBCadClientes.RazaoSocial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroTelefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TBCadClientes.RazaoSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroTelefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink(" ", "AlterarContatos", new { id = item.Id }, new { @class = "btn btn-info glyphicon glyphicon-pencil", title = "Alterar" })
                @Html.ActionLink(" ", "MostrarDetalhes", new { id = item.Id }, new { @class = "btn btn-success glyphicon glyphicon-zoom-in", title = "Mostrar Detalhes" })
                @Html.ActionLink(" ", "ExcluirContatos", new { id = item.Id }, new { @class = "btn btn-danger glyphicon glyphicon-remove-circle", title = "Excluir" })
            </td>
        </tr>
    }

</table>
